generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

generator zod {
  provider = "prisma-zod-generator"
  output   = "../generated/zod"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id             String   @id @default(cuid())
  name           String
  location       String
  price          Float
  image          String
  availableFrom  DateTime
  availableTo    DateTime
  description    String
  features       String[]
  mileage        Int
  fuelType       String
  transmission   String
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  cars      Car[]
}
